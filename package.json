{
  "name": "jam",
  "description": "Jam is a modular man-in-the-middle proxy for Animal Jam classic.",
  "main": "src/index.js",
  "version": "3.0.2",
  "scripts": {
    "dev": "npx cross-env NODE_ENV=development nodemon",
    "build:win": "npx electron-builder build -w --x64 --ia32 -p never",
    "build:mac": "npx electron-builder build -m --arm64 -p never",
    "build:winmac": "npx electron-builder build -mw"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sxip/jam.git"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "ajv": "^8.6.2",
    "cheerio": "^1.0.0",
    "cross-env": "^7.0.3",
    "electron-store": "^7.0.1",
    "electron-updater": "^4.3.9",
    "express": "^4.17.1",
    "jquery": "^3.6.0",
    "live-plugin-manager": "^0.17.1",
    "node-gyp": "^8.4.1",
    "npm": "^10.8.2",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "tailwindcss": "^3.4.10"
  },
  "build": {
    "productName": "Jam",
    "appId": "com.jam",
    "icon": "assets/icon.ico",
    "directories": {
      "output": "build"
    },
    "win": {
      "requestedExecutionLevel": "highestAvailable"
    },
    "mac": {
      "identity": null
    },
    "files": [
      "src/**/*"
    ],
    "extraFiles": [
      "plugins/**/*",
      "assets/**/*",
      "public/**/*",
      "settings.json"
    ]
  }
}
